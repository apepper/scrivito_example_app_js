{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "src",
    "jsx": "react",
    "lib": ["dom", "es2015"],
    "outDir": "build",
    "module": "esnext",
    "moduleResolution": "Node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "strict": true,
    "strictFunctionTypes": false,
    "target": "es5"
  },
  "include": ["src/**/*"],
  "exclude": ["build", "buildNode"]
}
